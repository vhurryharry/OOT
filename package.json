{
  "private": true,
  "devDependencies": {
    "@stoplight/spectral": "^4.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "prettier": "1.18.2",
    "redoc-cli": "^0.9.2"
  },
  "scripts": {
    "lint": "prettier --write './**/*.{js,json,css,md,yml,yaml}'",
    "lint:check": "prettier --list-different './**/*.{js,json,css,md,yml,yaml}'",
    "lint:api": "spectral lint docs/openapi.yaml",
    "build:docs": "redoc-cli bundle docs/openapi.yaml -o dist/index.html --title \"API Documentation\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,yml,yaml,sass,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
