{% extends 'shell.html.twig' %}

{% block title %}{{ course.title }}{% endblock %}

{% block body %}
  <section class="section">
    <div class="container">
      <section class="hero">
        <div class="hero-body">
          <div class="container">
            <h1 class="title">
              {{ course.title }}
            </h1>
            <h2 class="subtitle">
              {{ course.hero }}
            </h2>
          </div>
        </div>
      </section>

      <div class="columns">
        <div class="column is-two-thirds">
          {{ course.content }}

          <hr />

          <h3 class="title is-4">Instructors</h3>
          <div class="columns">
            {% for instructor in instructors %}
              <div class="column is-one-quarter has-text-centered">
                <div class="box">
                  <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                  <div class="content">
                    <p>
                      <strong>{{ instructor.name}}</strong>
                    </p>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>

          <h3 class="title is-4">Testimonials</h3>
          {% for testimonial in testimonials %}
            <div class="box">
              <article class="media">
                <div class="media-left">
                  <figure class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                  </figure>
                </div>
                <div class="media-content">
                  <div class="content">
                    <p>
                      <strong>John Smith</strong> <small>@johnsmith</small>
                      <br>
                      {{ testimonial.content }}
                    </p>
                  </div>
                </div>
              </article>
            </div>
          {% endfor %}

          <h3 class="title is-4">Reviews</h3>
          {% for review in reviews %}
            <div class="box">
              <p>
                {{ review.content }}
              </p>

              {% for i in range(0, 5) %}
                {% if i <= review.rating %}
                  <span class="icon is-small">★</span>
                {% else %}
                  <span class="icon is-small">☆</span>
                {% endif %}
              {% endfor %}
            </div>
          {% endfor %}
        </div>
        <div class="column">
          <h3 class="title is-4">Enroll now</h3>

          <form method="POST" action="{{ path('order') }}">
            <div class="field has-addons">
              <div class="control is-expanded">
                <div class="select is-fullwidth">
                  <select>
                    {% for option in options %}
                      <option>{{ option.title }} ${{ option.price / 100 }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>

              <div class="control">
                <button class="button is-primary">Enroll</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <app-root id="app">
{% endblock %}
