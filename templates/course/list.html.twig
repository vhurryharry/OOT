{% extends 'shell.html.twig' %}

{% block title %}Courses{% endblock %}

{% block body %}

  <section class="hero is-primary is-bold">
    <div class="hero-body">
      <div class="container">
        <h1 class="title is-spaced">Sommelier Certification</h1>
        <h2 class="subtitle">Join the growing community of impassioned experts who are using their knowledge to make big things happen.</h2>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <h2 class="title has-text-centered">Upcoming courses</h2>
      <div class="columns is-multiline">
        {% for course in courses %}
          <div class="column is-6-tablet is-3-desktop">
            <div class="card" style="height: 100%">
              <div class="card-image">
                <a href="{{ path('course', {slug: course.slug }) }}" title="{{ course.title }}">
                  <img src="https://bulma.dev/placeholder/pictures/bg_4-3.svg?primary=00d1b2" alt="">
                </a>
              </div>
              <div class="card-content">
                <h5 class="title is-6">
                  <a href="{{ path('course', {slug: course.slug }) }}" title="{{ course.title }}">{{ course.title }}
                  </a>
                </h5>
                <p>{{ course.hero }} Quisque mollis non metus nec scelerisque. Mauris non ligula mollis, facilisis est at, euismod massa.</p>
              </div>

              <div class="card-footer">
                <p class="card-footer-item">24/07 at London</p>
                <p class="card-footer-item">
                  <a class="button is-primary" href="{{ path('course', {slug: course.slug }) }}" title="{{ course.title }}">
                    Learn more
                  </a>
                </p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock %}
